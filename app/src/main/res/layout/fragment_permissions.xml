<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background_clr"
    tools:context=".Activities.Registration.PermissionsFragment">

    <RelativeLayout
        android:id="@+id/locPerm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp"
        android:background="@color/activity_background_clr">

        <TextView
            android:id="@+id/locPermTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Доступ к геоданным"
            android:textSize="22sp" />

        <Button
            android:id="@+id/locPermBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/locPermTv"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:text="Разрешить" />

    </RelativeLayout>

    <Button
        android:id="@+id/nextBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/locPerm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Далее" />

</RelativeLayout>